generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int          @id @default(autoincrement())
  name        String             
  email       String       @unique
  password    String       
  role Role @default(viewer)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  subEvents SubEvent[]
  events Event[]
}

model Event {
  id          Int          @id @default(autoincrement())
  eventName  String       @unique
  desc        String
  startDate DateTime
  endDate DateTime
  creator User @relation(fields: [creatorId], references: [id])
  creatorId Int
  subEvents SubEvent[]
  image String?
}

model SubEvent {
  id       Int    @id @default(autoincrement())
  subEventName String @unique
  desc        String
  startDate DateTime
  endDate DateTime
  event Event @relation(fields: [eventId], references: [id])
  eventId Int
  creator User @relation(fields: [creatorId], references: [id])
  creatorId Int
   image String?
}

enum Role{
  admin
  organiser
  viewer
}